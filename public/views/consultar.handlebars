<div id="main-content">
    {{> navbar}}

    <body style="background-color: #fff;">
        <script>
            function confirmDelete(delUrl) {
                if (confirm("Deseja apagar o registro?"))
                    document.location = delUrl;
            }
        </script>

        <div class="container">
            <div class="titulos">
                <h1 id="titulo">Consultas Agendadas</h1>
                <p id="subtitulo">Consulte aqui todos os agendamentos que foram realizados.</p>
            </div>

            <div class="container" style="background-color: white;">
                <br>
                <div class="row">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-active" style="text-align: center;">
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Data de Nascimento</th>
                                    <th scope="col">Celular</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Data de consulta</th>
                                    <th scope="col">Horário</th>
                                    <th scope="col">Motivo</th>
                                    <th scope="col">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each agendamentos}}
                                <tr>
                                    <td>{{nome}}</td>
                                    <td>{{data_nascimento}}</td>
                                    <td>{{celular}}</td>
                                    <td>{{email}}</td> <!-- Corrigido de {{emali}} para {{email}} -->
                                    <td>{{data_consulta}}</td>
                                    <td>{{hora_consulta}}</td>
                                    <td>{{motivo_consulta}}</td>
                                    <td>
                                        <a href="/editar/{{id}}"><img class="icon" src="./img/editar.png" height="25"/></a>
                                        <a style="cursor: pointer" onclick="javascript:confirmDelete('apagar/{{id}}')"><img class="icon" src="./img/excluir.png" height="25"/></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>  
        </div>
    </body>
</div>
