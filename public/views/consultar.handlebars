<body>
  <script>
		function confirmDelete(delUrl) {
  			if (confirm("Deseja apagar o registro?"))
   				document.location = delUrl;
		}
	</script>

  <div class="container">
    {{#if mensagemSucesso}}
      <div class="alert alert-success">
          {{mensagemSucesso}}
      </div>
    {{/if}}
 
    {{#if mensagemErro}}
      <div class="alert alert-danger">
          {{mensagemErro}}
      </div>
    {{/if}}

    <div class="titulos">
        <h1 id="titulo">Consultas Agendadas</h1>
        <p id="subtitulo">Consulte aqui todos os agendamentos que foram realizados.</p>
    </div>

    <div class="container" style="background-color: white;">
        </br>
        <div class="row">
            <div class="table-responsive" >
                <table class="table">
                    <thead class="table-active" style="text-align: center;">
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Data de Nascimento</th>
                            <th scope="col">Celular</th>
                            <th scope="col">Email</th>
                            <th scope="col">Data de consulta</th>
                            <th scope="col">Horário</th>
                            <th scope="col">Motivo</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each agendamentos}}
                        <tr>
                          <td scope="col">{{nome}}</td>
                          <td scope="col">{{data_nascimento}}</td>
                          <td scope="col">{{celular}}</td>
                          <td scope="col">{{emali}}</td>
                          <td scope="col">{{data_consulta}}</td>
                          <td scope="col">{{hora_consulta}}</td>
                          <td scope="col">{{motivo_consulta}}</td>
                          <td>
                            <a href="/editar/{{id}}"><img class="icon" src="./img/editar.png" height="25"/></a>
                            <a style="cursor: pointer" onclick="javascript:confirmDelete('apagar/{{id}}')"><img class="icon" src="./img/excluir.png" height="25"/></a>  
                          </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
      </div>  
    </div>
  </div>
</body>